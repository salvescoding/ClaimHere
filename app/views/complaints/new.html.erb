<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Complain please...</h1>
      <p>Please post your complaint</p>
      <%= simple_form_for [@company, @complaint] do |f| %>
        <%= f.input :company_id, collection: @companies, as: :select %>
        <%= f.input :title %>
        <%= f.input :description, as: :text %>
        <%= f.input :category, collection: @categories, as: :select %>
        <%= f.input :company_rating, :collection => 1..5 %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
