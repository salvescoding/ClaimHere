
<div class="container">
  <div class="complaint-new-wrapper">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">

        <%= simple_form_for [@company, @complaint] do |f| %>
          <%= f.input :title %>
          <%= f.input :description, as: :text %>
          <%= f.input :company_rating, :collection => 1..5 %>
          <%= f.input :category, collection: @categories, as: :select %>
          <%= f.input :old_customer, :collection => [['Yes',false],['No',true]],
            :include_blank => false,
            :label => "Are you a new customer?" %>
          <%= f.button :submit, class: "btn-claim btn-full" %>
        <% end %>

        <% if !@company %>
          <%= link_to "Back", root_path, class: "btn btn-claim btn-full" %>
        <% else %>
          <%= link_to "Back", company_path(@company), class: "btn btn-claim btn-full" %>
        <% end %>

      </div>
    </div>
  </div>
</div>

