<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>This is the profile page</h1>
      <%= link_to "Edit my profile", edit_user_path(@user), class: "btn btn-primary" %>

    </div>
  </div>
</div>

<div class="complaints-show">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <h2 class="text-center">My Complaints</h2>
          <div class="messages-show-company">

        <% @complaints.each do |complaint| %>
        <%= link_to complaint_path(complaint) do %>
        <div class="message">
          <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
          <div class="message-name">
            <h3>
              <%= complaint.user.email %>
            </h3>
            <p>
              <%= complaint.created_at %>
            </p>
          </div>
          <div class="message-body">
            <p><strong><%= complaint.category %></strong></p>
            <p>
              <%= complaint.description %>
            </p>
          </div>
          <div class="message-status">
            <p class="status pending">Unsolved</p>
          </div>
        </div>
        <% end %>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
