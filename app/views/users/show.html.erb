<div class="profile-banner"></div>
<div class="profile-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-sm-3 col-xs-12">
        <%= render partial: 'shared/cards/profile_card' %>
      </div>

      <div class="row">
        <div class="col-sm-8 col-xs-12">
          <div class="profile-right">
            <% if @complaints != []%>
              <% @complaints.each do |complaint| %>
                <div class="col-xs-12">
                  <%= render partial: "shared/messages_profile", locals: { complaint: complaint } %>
                </div>
              <% end %>
            <% else %>
              <div class="profile-no-complaints">
                <div class="col-sm-6">
                   <p>You haven't submitted any complaints yet</p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
     <div class="pagination-container">
        <%= will_paginate @complaints %>
     </div>
  </div>
</div>
