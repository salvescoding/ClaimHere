

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2>Edit your profile</h2>

      <%= simple_form_for(@user) do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :city %>
      <%= f.input :phone_number %>
      <%= f.input :photo, as: :attachinary %>
      <%= f.submit "Save changes", class: "btn-claim btn-full"  %>
      <% end %>


    </div>
  </div>
</div>
